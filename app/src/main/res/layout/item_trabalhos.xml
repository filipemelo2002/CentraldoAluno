<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		app:cardElevation="5dp">
		<RelativeLayout
			android:layout_width="5dp"
			android:layout_height="match_parent"
			android:id="@+id/viewColor"
			android:background="@color/colorPrimary"
			>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/viewColor"
			android:id="@+id/primaryAction"
			android:padding="7dp">
			<TextView
				android:id="@+id/txtMateria"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:fontFamily="sans-serif-condensed"
				android:fadingEdge="horizontal"
				android:singleLine="false"
				android:textSize="16sp"
				android:textColor="#161616" />
			<TextView
				android:layout_below="@+id/txtMateria"
				android:layout_alignLeft="@+id/txtMateria"
				android:id="@+id/txtDescribe"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="16dp"
				android:textSize="12sp"/>
			<TextView
				android:layout_below="@+id/txtDescribe"
				android:layout_alignLeft="@+id/txtDescribe"
				android:id="@+id/txtEntrega"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="16dp"
				android:textSize="12sp"/>
			<RelativeLayout
				android:layout_below="@+id/txtEntrega"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp">
				<ImageView
					android:id="@+id/trabalhoTrash"
					android:layout_width="27dp"
					android:layout_height="27dp"
					android:padding="4dp"

					android:src="@drawable/trash"/>
			</RelativeLayout>
		</RelativeLayout>

	</android.support.v7.widget.CardView>


</RelativeLayout>

